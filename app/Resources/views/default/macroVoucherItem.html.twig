{% macro voucherItem_prototype(voucherItemType) %}
    {% import 'default/macroVoucherItemAllocation.html.twig' as macroVoucherItemAllocation %}

    <td class="tags_td">
        <div style="min-width: 100px;font-size: 10px;">
            {{ form_widget(voucherItemType.name) }}
            {{ form_errors(voucherItemType.name) }}
            <br>
        </div>
        <div style="min-width: 50px !important;font-size: 10px;">
            {{ form_widget(voucherItemType.itemOrder) }}
        </div>
    </td>
    <td>
        <div style="min-width: 130px;">
            {{ form_widget(voucherItemType.amount) }}
            {{ form_errors(voucherItemType.amount) }}
        </div>
    </td>
    <td>
        <div>
            {{ form_widget(voucherItemType.exchangeRate) }}
            {{ form_errors(voucherItemType.exchangeRate) }}
        </div>
    </td>
    <td class="delete_voucher_item_action">
        {{ form_widget(voucherItemType.delete) }}
    </td>

{% endmacro %}