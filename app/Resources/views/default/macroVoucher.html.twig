{% macro voucher_prototype(voucher) %}
    {% import 'default/macroVoucherItem.html.twig' as macroVoucherItem %}

    <div class="portlet box blue portlet_form sma voucher_line">
        <div class="portlet-title portlet-hidden-title">
            <div class="caption" style="padding: 0;">
                <span class="voucher_number"></span></div>
            <div class="tools">
                <a href="javascript:;" class="collapse" data-original-title="" title=""></a>
            </div>
        </div>
        <div class="portlet-body" style="overflow-x: auto;padding-bottom: 200px;">
            <div class="row" style="margin:7px 0 7px 0;">
                <div class="col-md-6">
                    {{ form_row(voucher.date) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(voucher.documentNo) }}
                </div>
            </div>
            <div class="row">
            </div>

            <table class="table table-striped table-bordered table-advance table-hover small-table">
                <thead>
                <tr>
                    <th style="width:25%">
                        Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Exch. Rate
                    </th>
                    <th style="width: 5%;">
                        Actions
                    </th>
                </tr>
                </thead>
                <tbody class="debit_lines"
                       data-prototype="{{ macroVoucherItem.voucherItem_prototype(voucher.items.vars.prototype)|e }}"
                       data-index="{{ voucher.items|length }}">
                {% for voucherItem in voucher.items %}
                    <tr class="item_line debit_line">
                        {{ macroVoucherItem.voucherItem_prototype(voucherItem) }}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="pull-right">
                <a href="#" class="btn btn-default btn-xs class_link_add_debit_item" id="link_add_debit_item">
                    <i class="fa fa-plus"></i> Add Item
                </a>
                <a href="#" class="btn btn-xs btn-info remove-tag red " tabindex="-1">
                    <i class="fa fa-times"></i> Delete Voucher
                </a>
            </div>
        </div>
    </div>
{% endmacro %}